<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/md_vertical_body_1yy">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/md_vertical_body_1yy">

        <TextView
            android:id="@+id/my_team_cardview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="7月4日生日派对聚会"
            android:textSize="@dimen/md_text_size_body"
            android:textColor="@color/md_text_color_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
        android:id="@+id/my_team_cardview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="已完成"
        android:textSize="@dimen/md_text_size_caption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/my_team_cardview_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_team_cardview_style">

            <ImageView
                android:layout_width="@dimen/md_horizontal_right_icon"
                android:layout_height="@dimen/md_horizontal_right_icon"
                android:src="@drawable/address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址、商店名称"
                android:textSize="@dimen/md_text_size_caption" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/my_team_cardview_user_image_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_team_cardview_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="8人"
                android:textSize="12sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/image_user_size_m"
                android:layout_height="@dimen/image_user_size_m"
                android:src="@drawable/place_1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/image_user_size_m"
                android:layout_height="@dimen/image_user_size_m"
                android:src="@drawable/place_2" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/image_user_size_m"
                android:layout_height="@dimen/image_user_size_m"
                android:src="@drawable/place_3" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/image_user_size_m"
                android:layout_height="@dimen/image_user_size_m"
                android:src="@drawable/place_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="..." />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>